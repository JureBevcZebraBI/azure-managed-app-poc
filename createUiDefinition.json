{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "config": { "basics": {} },
    "basics": [
      {
        "name": "containerImage",
        "type": "Microsoft.Common.TextBox",
        "label": "Docker Image",
        "toolTip": "e.g. myregistry.azurecr.io/myapp:latest",
        "constraints": { "required": true }
      },
      {
        "name": "redisUri",
        "type": "Microsoft.Common.TextBox",
        "label": "REDIS_URI",
        "constraints": { "required": true }
      },
      {
        "name": "dbUri",
        "type": "Microsoft.Common.TextBox",
        "label": "DB_URI",
        "constraints": { "required": true }
      },
      {
        "name": "registryServer",
        "type": "Microsoft.Common.TextBox",
        "label": "Registry Server",
        "toolTip": "e.g. myregistry.azurecr.io",
        "constraints": { "required": true }
      },
      {
        "name": "registryUsername",
        "type": "Microsoft.Common.TextBox",
        "label": "Registry Username",
        "constraints": { "required": true }
      },
      {
        "name": "registryPassword",
        "type": "Microsoft.Common.SecureString",
        "label": "Registry Password",
        "constraints": { "required": true }
      }
    ],
    "steps": [],
    "outputs": {
      "containerImage": "[basics('containerImage')]",
      "redisUri": "[basics('redisUri')]",
      "dbUri": "[basics('dbUri')]",
      "registryServer": "[basics('registryServer')]",
      "registryUsername": "[basics('registryUsername')]"
    }
  }
}
