{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [],
    "steps": [
      {
        "name": "vmSettings",
        "label": "VM Settings",
        "elements": [
          {
            "name": "adminUsername",
            "type": "Microsoft.Common.TextBox",
            "label": "Admin Username",
            "toolTip": "Enter the VM admin username",
            "constraints": {
              "required": true
            },
            "defaultValue": "azureuser"
          },
          {
            "name": "adminPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": "Admin Password",
            "toolTip": "Enter a secure password",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "vmName",
            "type": "Microsoft.Common.TextBox",
            "label": "VM Name",
            "toolTip": "Name of the virtual machine",
            "constraints": {
              "required": true
            },
            "defaultValue": "poc-vm"
          }
        ]
      }
    ],
    "outputs": {
      "adminUsername": "[steps('vmSettings').adminUsername]",
      "adminPassword": "[steps('vmSettings').adminPassword]",
      "vmName": "[steps('vmSettings').vmName]"
    }
  }
}
