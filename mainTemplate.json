{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerImage": { "type": "string" },
    "redisUri": { "type": "string" },
    "dbUri": { "type": "string" },
    "registryServer": { "type": "string" },
    "registryUsername": { "type": "string" },
    "registryPassword": { "type": "securestring" }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "managedapp-container",
      "location": "[resourceGroup().location]",
      "properties": {
        "osType": "Linux",
        "imageRegistryCredentials": [
          {
            "server": "[parameters('registryServer')]",
            "username": "[parameters('registryUsername')]",
            "password": "[parameters('registryPassword')]"
          }
        ],
        "containers": [
          {
            "name": "app",
            "properties": {
              "image": "[parameters('containerImage')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.5
                }
              },
              "environmentVariables": [
                { "name": "REDIS_URI", "value": "[parameters('redisUri')]" },
                { "name": "DB_URI", "value": "[parameters('dbUri')]" }
              ],
              "ports": [{ "port": 80 }]
            }
          }
        ],
        "ipAddress": {
          "type": "Public",
          "ports": [{ "protocol": "Tcp", "port": 80 }]
        }
      }
    }
  ]
}
